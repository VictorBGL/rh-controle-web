{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@pim-final/components": ["components/src/index.ts"],
      "@pim-final/data": ["data/src/index.ts"],
      "@pim-final/forms": ["forms/src/index.ts"],
      "@pim-final/services": ["services/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
